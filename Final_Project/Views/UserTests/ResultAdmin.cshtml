@model  IEnumerable<PL.Models.ResultViewModel>
@if (Model.Count() > 0)
{
    <table class="table">
        <tr>
            <th>Тема</th>
            <th>Дата прохождения</th>
            <th>Результат</th>
            <th>Проверен</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.Raw(ViewBag.Topic)

                </td>
                <td>
                    @Html.DisplayFor(modelitem => item.Date)

                </td>
                <td style="padding-left:2%">
                    @Html.DisplayFor(modelitem => item.Score)/ @Html.Raw(ViewBag.Count)
                </td>
                <td style="padding-left:2%">
                    @Html.DisplayFor(modelitem => item.IsFullOpenChecked)
                </td>
                <td>
                    @Html.ActionLink("Проверить открытый вопрос", "Check", new { Test_id = item.Test_ID, User_id = item.User_ID, Date = item.Date })
                </td>
            </tr>
        }


    </table>
    @Html.ActionLink("Назад к списку тестов", "IndexAdmin", "Tests")
}


else
{
    <h1>Статистика по данному тесту отсутсвует </h1>
    @Html.ActionLink("Назад к списку тестов", "IndexAdmin", "Tests")
}
