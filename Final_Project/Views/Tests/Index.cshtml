@model PL.Models.IndexViewModel
@using Final_Project.Util

<h2></h2>

@using (Ajax.BeginForm("TestSearch", new AjaxOptions { UpdateTargetId = "results" }))
{
    <input type="text" name="name" />
    <input type="submit" value="Поиск" />
}
<div id="results"></div>
@Scripts.Render("~/scripts/jquery-1.10.2.min.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")

<p>
    @Html.ActionLink("Создать тест", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Тема
        </th>
        <th style="padding-left:20%" >
            Время прохождения
        </th>
         </tr>

    @foreach (var item in Model.Tests)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Topic)
            </td>
            <td style="padding-left:23%">
                @Html.DisplayFor(modelItem => item.TimeForTest)
            </td>
            <td style="padding-left:20%">
                @Html.ActionLink("Редактировать", "Edit", new { id = item.Test_ID }) |
                @Html.ActionLink("Список вопросов", "Details", "Tests", new { id = item.Test_ID }, null) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.Test_ID })
            </td>
        </tr>
    }

</table>
<br />
<div class="btn-group">
    @Html.PageLinks(Model.PageInfo, x => Url.Action("Index", new { page = x }))
</div>
